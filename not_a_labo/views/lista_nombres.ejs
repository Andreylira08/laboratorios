<%- include('includes/_header_') %>

<% if (info != '') { %>
    <div class="notification is-info">
        <%= info %>
    </div>
<% } %>

<section class="section">
    <div class="container">
        <h1 class="title has-text-centered">
            <span class="has-text-danger-dark">MARVEL</span> COLLECTION
        </h1>
        
        <div class="columns is-multiline">
            <% for(let marvel of marvels) { %>
                <div class="column is-3">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-4by3">
                                <img src="/api/placeholder/400/300" alt="<%= marvel.nombre %> image">
                            </figure>
                        </div>
                        <div class="card-content">
                            <div class="content">
                                <a href="/backend/nombres/<%= marvel.id %>" class="is-size-5 has-text-weight-bold has-text-danger">
                                    <%= marvel.nombre %>
                                </a>
                                <p class="is-size-7 mt-2">
                                    <i class="far fa-calendar"></i> <%= marvel.created_at %>
                                </p>
                            </div>
                        </div>
                        <footer class="card-footer">
                            <a class="card-footer-item">Details</a>
                            <a class="card-footer-item">Edit</a>
                        </footer>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>

<%- include('includes/_footer_') %>